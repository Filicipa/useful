# Create /etc/systemd/system/foundry.service
# 
[Unit]
Description=Anvil local EVM fork
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu
Environment="ANKR_KEY=<ANKR_KEY>"
ExecStart=/home/ubuntu/.foundry/bin/anvil \
  --host 0.0.0.0 \
  --fork-chain-id 1 \
  --no-rate-limit \
  --state /home/ubuntu/state/state.json \
  -f https://rpc.ankr.com/eth/$ANKR_KEY
Restart=always
RestartSec=3
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
